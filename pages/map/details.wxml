<!--pages/map/details.wxml-->

<image style="width:100%; height:250px;" src="{{building.img}}"> </image>
<view style="height:60px; display: flex;">
  <view style="margin:auto 30px;width:80%;">{{building.name}}</view>
  <navigator style="margin:auto 15px;" url='polyline?latitude={{building.latitude}}&longitude={{building.longitude}}'>
    <image style='width:80rpx; height:80rpx;' src="/img/location.svg"> </image>
  </navigator>
</view>

<view style="background:#f8f8f8; width:100%;">
  <view class='description'>
    {{ building.description }}
  </view>
</view>